<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
  <!-- Information such as name and manufacturer stored in include file -->
  <?include "krita.wxi" ?>
  <Product Id="*" Name="$(var.ProductName)" Language="1033" Version="$(env.C2WINSTALL_VERSION)" Manufacturer="$(var.ProductManufacturer)" UpgradeCode="a09622b0-27f9-11e2-81c1-0800200c9a66">
    <Package Description="Krita Sketch - Sketching on the Go" Comments="$(env.C2WINSTALL_VERSIONSTRING)" InstallerVersion="300" Compressed="yes"/>
    <Media Id="1" Cabinet="simple.cab" EmbedCab="yes"/>
    <!-- Support upgrades -->
    <Property Id="PREVIOUSVERSIONSINSTALLED" Secure="yes"/>
    <Property Id="ARPPRODUCTION" Value="Icon.KritaSketch.ico"/>
    <MajorUpgrade AllowDowngrades="yes" MigrateFeatures="no"/>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder" Name="PFiles">
        <Directory Id="CALLIGRADIR" Name="KritaSketch">
          <Component Id="ENV.BAT" DiskId="1" Guid="C58493DF-C500-475D-B011-3AF792F8D40A">
            <File Id="ENV.BAT" Name="env.bat" Source="res\package\env.bat"/>
          </Component>
	  <Directory Id="bindir" Name="bin">
          	<Component Id="MainExecutable" Guid="b41437a0-27f9-11e2-81c1-0800200c9a66">
                       <File Id="KritaSketchExe" Name="kritasketch.exe" Source="$(env.C2WINSTALL_INPUT)\bin\kritasketch.exe" KeyPath="yes"/>
	               <Shortcut Id="ProgramMenu.KritaSketch" Directory="ProgramMenuDir" Name="Krita Sketch" WorkingDirectory="CALLIGRADIR" Icon="Icon.KritaSketch.exe" IconIndex="0" Advertise="yes"/>
                       <Shortcut Id="Desktop.CalligraKritaSketch" Directory="DesktopFolder" Name="Krita Sketch" WorkingDirectory="CALLIGRADIR" Icon="Icon.KritaSketch.exe" IconIndex="0" Advertise="yes"/>
                       <Shortcut Id="ProgramMenu.Tools.UninstallProduct" Directory="ProgramMenuDir.Tools" Name="Uninstall Krita Sketch" Target="[SystemFolder]msiexec.exe" Arguments="/x [ProductCode]" Description="Uninstalls Krita Sketch"/>
                </Component>
          </Directory>

          <!--Component Id="STARTAPP.VBS" DiskId="1" Guid="6A53D7FC-9ACE-4275-9B0F-97BF4FBB4D16"==>
            <!File Id="STARTAPP.VBS" Name="StartApp.vbs" Source="res\package\StartApp.vbs"/-->
            <!-- CALLIGRA PROGRAM MENU -->
            <!--Shortcut Id="ProgramMenu.KritaSketch" Directory="ProgramMenuDir" Name="Krita Sketch" WorkingDirectory="CALLIGRADIR" Icon="Icon.KritaSketch.exe" IconIndex="0" Advertise="yes" Arguments="KRITASKETCH"/>
            <Shortcut Id="Desktop.CalligraKritaSketch" Directory="DesktopFolder" Name="Krita Sketch" WorkingDirectory="CALLIGRADIR" Icon="Icon.KritaSketch.exe" IconIndex="0" Advertise="yes" Arguments="KRITASKETCH"/-->
            <!--Shortcut Id="ProgramMenu.Krita" Directory="ProgramMenuDir" Name="Krita"
								  WorkingDirectory='CALLIGRADIR' Icon="Icon.Krita.exe" IconIndex="0" Advertise="yes"
								  Arguments="KRITA" />
						<Shortcut Id="Desktop.CalligraKrita" Directory="DesktopFolder" Name="Krita"
						          WorkingDirectory='CALLIGRADIR' Icon="Icon.Krita.exe" IconIndex="0" Advertise="yes"
								  Arguments="KRITA" /-->
            <!-- CALLIGRA\TOOLS PROGRAM MENU -->
            <!-- Shortcut to Uninstall -->
            <!-- Shortcut Id="ProgramMenu.Tools.UninstallProduct" Directory="ProgramMenuDir.Tools" Name="Uninstall Krita Sketch" Target="[SystemFolder]msiexec.exe" Arguments="/x [ProductCode]" Description="Uninstalls Krita Sketch"/>
          </Component-->
        </Directory>
      </Directory>
      <Directory Id="ProgramMenuFolder" Name="Programs">
        <Directory Id="ProgramMenuDir" Name="Krita">
          <Component Id="ProgramMenuDir" Guid="*">
            <RemoveFolder Id="ProgramMenuDir" On="uninstall"/>
            <RegistryValue Root="HKCU" Key="Software\$(var.ProductManufacturer)\Krita" Type="string" Value="" KeyPath="yes"/>
          </Component>
          <Directory Id="ProgramMenuDir.Tools" Name="Tools">
            <Component Id="ProgramMenuDir.Tools" Guid="{B9C1F04A-991A-4be3-96E1-CFCAFA70E0D4}">
              <RemoveFolder Id="ProgramMenuDir.Tools" On="uninstall"/>
              <RegistryValue Root="HKCU" Key="Software\$(var.ProductManufacturer)\Krita" Type="string" Value="" KeyPath="yes"/>
            </Component>
          </Directory>
        </Directory>
      </Directory>
      <!-- Allow installation of shortcuts on the desktop -->
      <!-- TODO make these optional -->
      <Directory Id="DesktopFolder" Name="Desktop"/>
    </Directory>
    <!-- Currently just the one feature for all of Calligra + dependencies -->
    <Feature Id="DefaultFeature" Title="Krita Sketch" Level="1">
      <ComponentGroupRef Id="CG.VC2010_Support"/>
      <ComponentRef Id="ENV.BAT"/>
      <ComponentRef Id="MainExecutable"/>
      <!--ComponentRef Id="STARTAPP.VBS"/-->
      <!-- Packaged by heat from the %C2WINSTALL_INPUT% folder -->
      <ComponentGroupRef Id="CalligraBaseFiles"/>
      <!-- Program Menu -->
      <ComponentRef Id="ProgramMenuDir"/>
      <ComponentRef Id="ProgramMenuDir.Tools"/>
    </Feature>
    <UI/>
    <!-- Icons -->
    <Icon Id="Icon.KritaSketch.exe" SourceFile="$(env.C2WINSTALL_INPUT)\bin\KRITASKETCH.EXE"/>
    <!--Icon Id="Icon.Krita.exe" SourceFile="$(env.C2WINSTALL_INPUT)\bin\KRITA.EXE" /-->
    <!-- Custom UI -->
    <WixVariable Id="WixUILicenseRtf" Value="res\UIExtension\gpl-2.0.rtf"/>
    <WixVariable Id="WixUIBannerBmp" Overridable="yes" Value="res\UIExtension\Bitmaps\bannrbmp.bmp"/>
    <WixVariable Id="WixUIDialogBmp" Overridable="yes" Value="res\UIExtension\Bitmaps\dlgbmp.bmp"/>
    <UI>
      <UIRef Id="WixUI_MondoCalligra"/>
    </UI>
    <!-- Custom post-install actions 
			 Need to run update-mime-database, followed by kbuildsycoca4 -->
    <CustomAction Id="RunUpdateMimeDb" FileKey="ENV.BAT" ExeCommand="update-mime-database &quot;[CALLIGRADIR]share\mime&quot;" Return="ignore" Impersonate="no" Execute="deferred"/>
    <CustomAction Id="RunKBuildSycoca4" FileKey="ENV.BAT" ExeCommand="kbuildsycoca4 --noincremental" Return="ignore" Impersonate="no" Execute="deferred"/>
    <CustomAction Id="FirstMsg" Script="vbscript" Execute="commit" Return="ignore"><![CDATA[
						msgbox "About to run custom actions..."
						msgbox "Dir: " & Session.Property("CALLIGRADIR")
					  ]]></CustomAction>
    <CustomAction Id="SecondMsg" Script="vbscript" Execute="commit" Return="ignore"><![CDATA[
						msgbox "Finished Custom Actions"
					  ]]></CustomAction>
    <InstallExecuteSequence>
      <!-- Only on successful install/upgrade -->
      <Custom Action="RunUpdateMimeDb" After="PublishProduct">NOT Installed</Custom>
      <Custom Action="RunKBuildSycoca4" After="RunUpdateMimeDb">NOT Installed</Custom>
      <!--ScheduleReboot After="InstallFinalize"/-->
    </InstallExecuteSequence>
  </Product>
</Wix>
